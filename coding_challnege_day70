class Solution {
public:
    int lengthOfLongestSubstring(string s) {
        int n=s.size();
        if(n==1||n==0) return n;
        int left=0;
        int right=0;
        int maxi=0;
        unordered_map<char,int> mp;
        while(left<n){
            mp[s[left]]++;
            while(mp[s[left]]>1){
                mp[s[right]]--;
                right++;
            }
            left++;
            maxi=max(maxi,left-right);
        }
        return maxi;
    }
};
