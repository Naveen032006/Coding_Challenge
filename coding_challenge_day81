class Solution {
public:
    int magicalString(int n) {
    if(n==0) return 0;
    if(n<=3) return 1;
     string s="122" ;
     int i=2;
     char nextchar='1';
     while(s.size()<n){
        int count=s[i]-'0';
        s.append(count,nextchar);
        nextchar=(nextchar=='1'?'2':'1');
        i++;
     }  
     return count(s.begin(),s.begin()+n,'1');
    }
};
