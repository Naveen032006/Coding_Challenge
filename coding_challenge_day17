class Solution {
public:
    vector<int> smallerNumbersThanCurrent(vector<int>& nums) {
       int n=nums.size();
       vector<int> res=nums;
       map<int,int> mp;
       sort(res.begin(),res.end());
       for(int i=n-1;i>=0;i--){
        mp[res[i]]=i;
       }
       for(int i=0;i<n;i++){
        nums[i]=mp[nums[i]];
       }
       return nums;
    }
};
