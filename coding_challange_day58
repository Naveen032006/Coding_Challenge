class Solution {
public:
static bool cmp(vector<int>& a,vector<int> &b){
    return a[1]-a[0]>b[1]-b[0];
}
    int twoCitySchedCost(vector<vector<int>>& costs) {
        int n=costs.size();
        int sum=0;
        vector<int> res(n);
        sort(costs.begin(),costs.end(),cmp);
        for(int i=0;i<n;i++){
            sum+=(i<n/2)?costs[i][0]:costs[i][1];
        }
        return sum;
    }
};
