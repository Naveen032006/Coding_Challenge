class Solution {
public:
    int countPrimes(int n) {
        if(n==2) return 0;
        if(n==1||n==0) return 0;
        vector<bool> isprime(n,true);
        isprime[0]=isprime[1]=false;
        int count=0;
        for(int i=2;i*i<n;i++){
            if(isprime[i]){
                count++;
                for(int j=i*i;j<n;j+=i){
                isprime[j]=false;
            }
            }
        }
        return count(isprime.begin(),isprime.end(),true);
    }
};
